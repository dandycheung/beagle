<resources>

    <style name="AppThemeBase" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/brand_light</item>
        <item name="colorSecondary">@color/brand_light</item>
        <item name="materialButtonStyle">@style/Button</item>
    </style>

    <style name="SplashTheme" parent="SplashThemeBase">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/brand_dark</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:statusBarColor">@color/toolbar_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppBarTheme" parent="AppTheme" />

</resources>